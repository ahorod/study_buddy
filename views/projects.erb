<!-- Dashboard Header -->
<section id="cover">
  <div id="cover-caption">
    <a href="/users/<%= @user.id() %>/languages/<%= @language.id()%>"><h1 class="display-3"><%=@language.name() %></h1></a>
    <p class="lead display-5"><%= @user.name() %></p>
  </div>
</section>


<div class="container">
  <h1> All Projects</h1>
  <a href="/users/<%= @user.id() %>/languages/<%= @language.id() %>/projects/new"><p>add project</p></a>
    <% if @projects.any?() %>
      <% @projects.each() do |project| %>
        <div class="card card-outline-primary mb-3 text-center">
          <div class="card-block">
            <blockquote class="card-blockquote">
              <p>Project: <%= project.name%></p>
              <p>Date: <%= project.date%></p>
              <p>description:<%= project.description%></p>
              <p>Github: <%= project.github%></p>
              <footer>Someone famous in <cite title="Source Title">Source Title</cite></footer>
            </blockquote>
          </div>
        </div>
      <% end %>
    </ul>
  <% else %>
    <h4>No projects added yet. Please <a href="/users/<%= @user.id() %>/languages/<%= @language.id() %>/projects/new">add project</a></h4>
  <% end %>
</div>
