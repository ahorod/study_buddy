<div class="row">
  <div class="col-md-6">

    <br>
    <% if @tags.any?() %>
      <h2>Available tags</h2>
        <ul>
          <%@tags.each() do |tag|%>
            <p><a href="/users/<%= @user.id() %>/languages/<%= @language.id() %>/tags/<%= tag.id() %>"><%= tag.name() %></a></p>
          <% end %>
        </ul>
    <% end %>
  </div>
  <div class="col-md-6">
    <form action="/users/<%= @user.id() %>/languages/<%= @language.id() %>/add_tag" method="post">
      <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" type="text" name="name">
      </div>
      <div class="btn-group">
        <button class="btn btn-success" type="submit">Add Tag</button>
      </div>
    </form>

  </div>

</div>
