<div class="container">
<h3>Current Tag <%= @tag.name() %></h3>
<h1>Flashcards</h1>
<br>
<a href="/users/<%= @user.id() %>/languages/<%= @language.id() %>/tags/<%= @tag.id()%>/flashcards/new">Add A New Flashcard</a>
<br><br>
<form action="/users/<%= @user.id() %>/languages/<%= @language.id() %>/tags/<%= @tag.id()%>/flashcards/new" method="post">
  <div class="form-group">
    <label for="question">Question: </label>
    <input id="question" name="question" type="text"  class="form-control">
  </div>

  <div class="form-group">
    <label for="answer">Answer: </label>
    <textarea id="answer" name="answer" type="text"  class="form-control" rows="5"></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Save</button>
</form>
<br>
<!-- Study button -->

<% if @flashcards.any?() %>
<button type="button" class="btn bbtn-success" name="button"><a href="/users/<%= @user.id() %>/languages/<%= @language.id() %>/tags/<%= @tag.id()%>/flashcards/<%= @flashcards.first().id() %>">Study</a></button>
<% end %>

<% if @flashcards.any?() %>
    <div class="row row-centered">
    <% @flashcards.each() do |flashcard| %>
      <!-- <div class="col-xs-6 col-md-4" id="flashcard_design"> -->
        <div class="col-md-6 col-sm stage_preview">
          <div id = "<%= flashcard.id() %>" class="flashcard_preview">
            <div class="front_preview">
              <p class="limit"><%= flashcard.question() %></p>
            </div>
            <div class="back_preview">
              <p class="limit"><%= flashcard.answer() %></p>
            </div>
            <form action="/users/<%= @user.id() %>/languages/<%= @language.id() %>/tags/<%= @tag.id()%>/flashcards/<%= flashcard.id() %>/delete" method="post">
              <input name="_method" type="hidden" value="delete">
              <input type="image" class="delete_button" src="/img/delete_w.svg" type="submit">
            </form>
          </div>

        </div>
        <% end %>
      </div>
   <% else %>
  <h4>No flashcards added yet.</h4>
<% end %>


</div>
