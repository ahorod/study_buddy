<div class="container">
<h3>Current Tag <%= @tag.name() %></h3>
<h1>Flashcards</h1>
<br>
<a href="/users/<%= @user.id() %>/languages/<%= @language.id() %>/tags/<%= @tag.id()%>/flashcards/new">Add A New Flashcard</a>
<br><br>
<form action="/users/<%= @user.id() %>/languages/<%= @language.id() %>/tags/<%= @tag.id()%>/flashcards/new" method="post">
  <div class="form-group">
    <label for="question">Question: </label>
    <input id="question" name="question" type="text"  class="form-control">
  </div>

  <div class="form-group">
    <label for="answer">Answer: </label>
    <input id="answer" name="answer" type="text"  class="form-control">
  </div>

  <button type="submit" class="btn btn-primary">Save</button>
</form>
<br>
<!-- Study button -->
<button type="button" class="btn bbtn-success" name="button"><a href="/users/<%= @user.id() %>/languages/<%= @language.id() %>/tags/<%= @tag.id()%>/flashcards/<%= @flashcards.first().id() %>">Study</a></button>

<% if @flashcards.any?() %>
    <div class="row">
    <% @flashcards.each() do |flashcard| %>
      <!-- <div class="col-xs-6 col-md-4" id="flashcard_design"> -->
        <div class="stage">
          <div id = "<%= flashcard.id() %>" class="flashcard">
            <div class="front">
              <p><%= flashcard.question() %></p>
            </div>
            <div class="back">
              <p><%= flashcard.answer() %></p>
            </div>
          </div>
          </div>
          <% end %>
       </div>
   <% else %>
  <h4>No flashcards added yet.</h4>
<% end %>


</div>
