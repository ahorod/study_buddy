<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Please choose a language you want to add notes to</h2>

      <% if @languages.any?() %>

        <form class="" action="/users/<%= @user.id%>/languages/" method="post">
          <div class="form-group">
            <label for="exampleSelect1">Select language</label>
            <select class="form-control" id="language_id" name ="language_id" type="text">
              <% @languages.each() do |language| %>
                <option value="<%= language.id()%>"> <%= language.name() %> </option>
              <% end %>
            </select>
            </div>
        <button class="btn btn-primary" type="submit">Go</button>
      </form>
          <% else  %>
            <p>Please add language</p>
          <% end %>
        </div>



    <div class="col-md-6">
      <form action="/users/<%= @user.id() %>/languages/new" method="post">

        <div class="form-group">
          <label for="name">Name</label>
          <input class="form-control" type="text" name="name">
        </div>
        <div class="btn-group">
          <button class="btn btn-success" type="submit">Add Language</button>
        </div>
      </form>
    </div>
  </div>
</div>
