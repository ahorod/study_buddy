<!-- Header -->
<a href="/users/<%= @user.id() %>/languages/<%= @language.id()%>" id="header_link">
  <section id="cover">
    <div id="cover-caption">
    <h1 class="display-3"><%=@language.name() %></h1>
      <p class="lead display-5"><%= @user.name() %></p>
        <h3>Resources</h3>
    </div>
  </section>
</a>

<div class="container">
  <br>
  <br>
  <a class="link-new-tip" href="/users/<%= @user.id() %>/languages/<%= @language.id() %>/resources/new"><h3>Add new resource</h3></a>

  <br>
  <br>

  <% if @resources.any?() %>
    <% @resources.each() do |resource| %>
    <div class="card tip_card text-left">
      <div class="card-header tip_header_resources">
        <h3><%= resource.name() %></h3>
        <form action="/users/<%= @user.id() %>/languages/<%= @language.id() %>/resources/<%= resource.id()%>/delete" method="post">
          <input name="_method" type="hidden" value="delete">
          <input type="image" class="delete_button_resources" src="/img/delete_w.svg" type="submit">
        </form>
      </div>
      <div class="card-block tip_description">
        <a href="<%= resource.link() %>"><p class="card-text" ><%= resource.link() %></p></a>
      </div>
    </div>
    <% end %>

  <% else %>
    <h4>No resources added yet.</h4>
  <% end %>


</div>
