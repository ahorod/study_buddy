<!-- Dashboard Header -->
  <a href="/users/<%= @user.id() %>/languages/<%= @language.id()%>" id="header_link">
    <section id="cover">
      <div id="cover-caption">
      <h1 class="display-3"><%=@language.name() %></h1>
        <p class="lead display-5"><%= @user.name() %></p>
      </div>
    </section>
  </a>
<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1 class="my-4">Add New Tip</h1>
      <form action="/users/<%= @user.id() %>/languages/<%= @language.id() %>/tips/new" method="post">
        <div class="form-group text-left">
          <label for="name" class="">Name: </label>
          <input id="name" name="name" type="text"  class="form-control">
        </div>

        <div class="form-group text-left">
          <label for="description">Description:</label>
          <textarea class="form-control" name="description" id="description" rows="5"></textarea>
        </div>


        <button type="submit" class="btn btn-primary">Save</button>
      </form>
    </div>
  </div>


</div>
