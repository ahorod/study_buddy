<!-- Dashboard Header -->
  <a href="/users/<%= @user.id() %>/languages/<%= @language.id()%>" id="header_link">
    <section id="cover">
      <div id="cover-caption">
      <h1 class="display-3"><%=@language.name() %></h1>
        <p class="lead display-5"><%= @user.name() %></p>
      </div>
    </section>
  </a>
<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1 class="my-4">Add New Resource</h1>
        <form action="/users/<%= @user.id() %>/languages/<%= @language.id() %>/resources/new" method="post">
          <div class="form-group">
            <label for="name">Name: </label>
            <input id="name" name="name" type="text"  class="form-control">
          </div>

          <div class="form-group">
            <label for="link">Link: </label>
            <input id="link" name="link" type="text"  class="form-control">
          </div>

          <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
  </div>


</div>
